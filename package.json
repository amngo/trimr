{
    "name": "trimr",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:ui": "jest --watch --coverage=false",
        "validate": "npm run type-check && npm run lint && npm test",
        "postinstall": "prisma generate",
        "prepare": "husky"
    },
    "prettier": {
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md,yml,yaml}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "@headlessui/react": "^2.2.4",
        "@prisma/client": "^6.1.0",
        "@tanstack/react-query": "^5.82.0",
        "@tanstack/react-query-devtools": "^5.82.0",
        "better-auth": "^1.2.12",
        "clsx": "^2.1.1",
        "lucide-react": "^0.525.0",
        "motion": "^12.23.3",
        "nanoid": "^5.0.9",
        "next": "15.1.2",
        "qrcode": "^1.5.4",
        "react": "^19",
        "react-dom": "^19",
        "tailwind-merge": "^3.3.1",
        "zod": "^3.25.76",
        "zustand": "^5.0.6"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@jest/globals": "^30.0.4",
        "@tailwindcss/postcss": "^4.1.11",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/jest": "^30.0.0",
        "@types/node": "^22.10.5",
        "@types/qrcode": "^1.5.5",
        "@types/react": "^19.0.2",
        "@types/react-dom": "^19.0.2",
        "autoprefixer": "^10.4.21",
        "daisyui": "^5.0.46",
        "eslint": "^9.17.0",
        "eslint-config-next": "15.1.2",
        "husky": "^9.1.7",
        "jest": "^30.0.4",
        "jest-environment-jsdom": "^30.0.4",
        "lint-staged": "^16.1.2",
        "postcss": "^8.5.1",
        "prettier": "^3.6.2",
        "prisma": "^6.1.0",
        "tailwindcss": "^4.1.11",
        "typescript": "^5.7.2"
    }
}
